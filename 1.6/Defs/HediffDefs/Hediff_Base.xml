    <HediffDef>
        <defName>NzFlm_He_CellReagent</defName>
        <label>cell reagent</label>
        <hediffClass>HediffWithComps</hediffClass>
        <!-- 你的体内被注入了一小团细胞，暂时接管了你的免疫系统的控制权，大幅度增加了愈合和免疫速度 -->
