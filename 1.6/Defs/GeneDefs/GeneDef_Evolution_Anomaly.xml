<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <!-- 活铁皮层 -->
    <NzFaceLessManMod.EvolutionGeneDef MayRequire="Ludeon.RimWorld.Anomaly">
        <defName>Nzflm_Ev_BioferriteSkinLayer</defName>
        <label>bioferrite skin layer</label>
        <displayCategory>Nzflm_Gene_Ev_Anomaly</displayCategory>
        <!-- 在你的皮下形成多层活铁护甲，降低你承受的最终伤害，但是会使你变得易燃。 -->
        <description>multi-layered bioferrite armor is formed under your skin, reducing the final damage you take, but making you more flammable.</description>
        <iconPath>UI/Icons/Abilities/ViewGenes</iconPath>
        <displayOrderInCategory>30</displayOrderInCategory>
        <evolution>2</evolution>
        <damageFactors>
            <Flame>1.5</Flame>
        </damageFactors>
        <modExtensions>
			<li Class="NzFaceLessManMod.GeneDefExt">
                <comps>
                    <li Class="NzFaceLessManMod.CompProperties_BionicPartAdd">
                        <hediffDef>NzFlm_He_BioferriteSkinLayer</hediffDef>
                        <bodyPartDef>Torso</bodyPartDef>
                        <installCount>-1</installCount>
                    </li>
                </comps>
            </li>
		</modExtensions>
    </NzFaceLessManMod.EvolutionGeneDef>
    
    <!-- 心智干扰 -->
    <NzFaceLessManMod.EvolutionGeneDef MayRequire="Ludeon.RimWorld.Anomaly">
        <defName>Nzflm_Ev_MindInterference</defName>
        <label>mind interference</label>
        <displayCategory>Nzflm_Gene_Ev_Anomaly</displayCategory>
        <!-- 通过注入一小团血肉，干扰实体和黑暗超凡智能的联系，(30天内实体意识最大 5%) -->
        <description>By injecting a small mass of flesh, it interferes with connection between the entity and the dark supernatural intelligence. (Maximum entity consciousness 5% within 30 days)</description>
        <iconPath>UI/Icons/Abilities/Psionic/MindInterference</iconPath>
        <displayOrderInCategory>40</displayOrderInCategory>
        <evolution>2</evolution>
        <abilities>
            <li>NzFlm_MindInterference</li>
        </abilities>
    </NzFaceLessManMod.EvolutionGeneDef>

    <!-- 食尸鬼掌控 -->
    <NzFaceLessManMod.EvolutionGeneDef MayRequire="Ludeon.RimWorld.Anomaly">
        <defName>Nzflm_Ev_GhoulControl</defName>
        <label>ghoul control</label>
        <labelShort>ghoul control</labelShort>
        <displayCategory>Nzflm_Gene_Ev_Anomaly</displayCategory>
        <description>You can control dark archotech shards within ghouls, causing them to undergo specific mutations.</description>
        <iconPath>UI/Icons/Abilities/GhoulControl</iconPath>
        <displayOrderInCategory>50</displayOrderInCategory>
        <evolution>2</evolution>
        <abilities>
            <li>NzFlm_GhoulControl</li>
        </abilities>
    </NzFaceLessManMod.EvolutionGeneDef>
</Defs>