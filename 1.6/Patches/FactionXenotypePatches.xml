<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <operations>
      <!-- 为帝国派系添加 Flm_FacelessMan Xenotype（仅当皇权 + 生物科技 DLC 存在时） -->
      <li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Royalty,Ludeon.RimWorld.Biotech">
        <xpath>/Defs/FactionDef[defName="Empire"]/xenotypeSet/xenotypeChances</xpath>
        <value>
          <Flm_FacelessMan>0.01</Flm_FacelessMan>
        </value>
      </li>

      <!-- 为温和的外来者派系添加 Flm_FacelessMan Xenotype（xenotype 定义在父 Def 中） -->
      <li Class="PatchOperationAdd" MayRequire="Ludeon.RimWorld.Biotech">
        <xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/xenotypeSet/xenotypeChances</xpath>
        <value>
          <Flm_FacelessMan>0.01</Flm_FacelessMan>
        </value>
      </li>
    </operations>
  </Operation>
</Patch>